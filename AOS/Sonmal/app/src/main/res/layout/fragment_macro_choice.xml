<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macro Choice Fragment"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="40dp"/>

        <Button
            android:id="@+id/btn_cafe"
            android:text="cafe"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_store"
            android:text="store"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_cafe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_hospital"
            android:text="hospital"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_store"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/custom1"
            android:text="custom1"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_hospital"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/custom2"
            android:text="custom2"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/custom1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>