<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_write_text"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <TableLayout
            android:id="@+id/bottom_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <TableRow>
                <ImageView
                    android:id="@+id/btn_hospital"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_hospital_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
                <ImageView
                    android:id="@+id/btn_traffic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_transport_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
                <ImageView
                    android:id="@+id/btn_offical"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_offices_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:id="@+id/btn_restaurant"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_restaurant_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
                <ImageView
                    android:id="@+id/btn_work"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_work_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
                <ImageView
                    android:id="@+id/btn_etc"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_macro_more_320px"
                    android:gravity="bottom |center_horizontal"
                    android:layout_margin="4dp"/>
            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>