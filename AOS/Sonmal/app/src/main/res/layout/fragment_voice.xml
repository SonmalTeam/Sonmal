<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/iv_macro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/love"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/voice_recording"
        app:layout_constraintEnd_toStartOf="@id/iv_macro"
        app:layout_constraintTop_toTopOf="@id/iv_macro"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_record"
        app:layout_constraintBottom_toTopOf="@id/cl_content"/>

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"/>

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인식한 말이 표시됩니다."
        android:textColor="#434343"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="@id/iv_mic"
        app:layout_constraintEnd_toEndOf="@id/iv_mic"
        app:layout_constraintTop_toBottomOf="@id/iv_mic"
        android:layout_marginTop="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_write_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_speak"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textColorHint="#9f9f9f"
            android:hint="내용을 적어주세요."
            android:gravity="top"
            android:padding="6dp"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/iv_speak"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_speaker_on_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>